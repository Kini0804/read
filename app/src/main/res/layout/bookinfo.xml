<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/return1"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:background="@drawable/yellowreturn"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

                <com.example.administrator.read.tongyong.url_imgview
                    android:id="@+id/bookimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="81dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="81dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_launcher_background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="2.0" />


                <TextView
                    android:id="@+id/book_info_authorn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="70dp"
                    android:layout_marginEnd="172dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="172dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:text="作者名"
                    android:textColor="#74B9FF"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/bookimage"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/book_info_introduction"
                    android:layout_width="224dp"
                    android:layout_height="53dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="2dp"
                    android:text="简介"
                    android:textColor="#444444"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/bookimage"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/book_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:text="书名"
                    android:textColor="#444444"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView2"
                    app:layout_constraintStart_toEndOf="@+id/bookimage"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="368dp"
                tools:context=".MainActivity">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="72dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="80dp"
                    android:layout_marginLeft="296dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginStart="296dp"
                    android:background="@android:color/transparent"
                    android:text="目录"
                    android:textColor="@drawable/button_change"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/button2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="72dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="296dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="296dp"
                    android:layout_marginStart="80dp"
                    android:background="@android:color/transparent"
                    android:text="详情"
                    android:textColor="@drawable/button_change"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:background="#000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button3">

                </View>

                <android.support.v4.view.ViewPager
                    android:id="@+id/content"
                    android:layout_width="0dp"
                    android:layout_height="320dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button3" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/share"
            android:layout_width="135dp"
            android:layout_height="51dp"
            android:layout_weight="1"
            android:background="#C0DFFE"
            android:text="分享"
            android:textColor="#444"
            android:textSize="14dp" />

        <Button
            android:id="@+id/putbook"
            android:layout_width="135dp"
            android:layout_height="51dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="#FFF2D1"
            android:text="加入书架"
            android:textColor="#444"
            android:textSize="14dp" />

        <Button
            android:id="@+id/yuedu"
            android:layout_width="135dp"
            android:layout_height="51dp"
            android:layout_weight="1"
            android:background="#FEE9AB"
            android:text="开始阅读"
            android:textColor="#444"
            android:textSize="14dp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>