<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page_login">

    <ImageView
        android:id="@+id/lgi_iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/lgi_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily=""
        android:textStyle="bold"
        android:typeface="normal"
        android:text="灯塔阅读"
        android:textColor="#FAD390"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/lgi_iv_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lgi_tv_name"
        app:srcCompat="@mipmap/logo" />


    <EditText
        android:id="@+id/lgi_et_tel"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_input"
        android:hint="输入手机号"
        android:inputType="phone"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lgi_iv_logo" />

    <EditText
        android:id="@+id/lgi_et_psw"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_input"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/lgi_et_tel"
        app:layout_constraintTop_toBottomOf="@+id/lgi_et_tel" />

    <Button
        android:id="@+id/lgi_bt_lgi"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="@drawable/lgi_bt_normal"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="开始阅读"
        android:textColor="#444444"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@id/lgi_et_psw"
        app:layout_constraintTop_toBottomOf="@id/lgi_et_psw" />

    <TextView
        android:id="@+id/lgi_tv_nuser"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="新用户"
        android:textColor="#bfdfff"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@id/lgi_bt_lgi"
        app:layout_constraintTop_toBottomOf="@id/lgi_bt_lgi"/>

    <TextView
        android:id="@+id/lgi_tv_rspsw"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="忘记密码"
        android:textColor="#bfdfff"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@id/lgi_bt_lgi"
        app:layout_constraintTop_toBottomOf="@id/lgi_bt_lgi"/>

    <TextView
        android:id="@+id/lgi_tv_hop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="跳过"
        android:textColor="#bfdfff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>